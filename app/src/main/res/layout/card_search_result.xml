<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cardIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/moment_circle_background"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <com.pulseapp.android.customTextViews.MontserratRegularTextView
        android:id="@+id/cardNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/cardIV"
        android:alpha="0.87"
        android:text="asddsasda"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <com.pulseapp.android.customTextViews.MontserratRegularTextView
        android:id="@+id/cardHandleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardNameTV"
        android:layout_toEndOf="@+id/cardIV"
        android:alpha="0.54"
        android:text="handle"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:id="@+id/acceptRejectLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardHandleTV"
        android:layout_toEndOf="@+id/cardIV"
        android:paddingBottom="8dp">

        <com.pulseapp.android.customTextViews.MontserratRegularTextView
            android:id="@+id/confirm_requestBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/pulse_purple_rounded_button_background"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="@string/confirm"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <com.pulseapp.android.customTextViews.MontserratRegularTextView
            android:id="@+id/ignore_requestBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ignore_button_background"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="@string/ignore"
            android:textAllCaps="true"
            android:textColor="#60000000"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/addFriendIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/add_svg" />

    <ImageView
        android:id="@+id/requestSentIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/selected2_svg"
        tools:ignore="ContentDescription" />
</RelativeLayout>