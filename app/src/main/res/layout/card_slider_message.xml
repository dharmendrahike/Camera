<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content"


    android:layout_gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp" />

        <com.pulseapp.android.customTextViews.MontserratRegularTextView
            android:id="@+id/cardNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cardIV"
            android:alpha="0.87"
            android:text="asddsa"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/messageStatusLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardNameTV"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/cardIV"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/messageStatusIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                app:srcCompat="@drawable/location_svg" />

            <com.pulseapp.android.customTextViews.MontserratRegularTextView
                android:id="@+id/messageStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.54"
                android:text="hello"
                android:textColor="@android:color/black"
                android:textSize="11sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/crossIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:visibility="gone"
            app:srcCompat="@drawable/clear_svg" />

        <com.pulseapp.android.customTextViews.MontserratRegularTextView
            android:id="@+id/timeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:alpha="0.37"
            android:paddingEnd="8dp"
            android:text="17 h"
            android:textColor="@android:color/black"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="72dp"
        android:background="#1a000000" />
</LinearLayout>