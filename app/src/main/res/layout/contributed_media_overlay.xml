<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/tint1View"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#99000000" />

    <!--<View-->
    <!--android:id="@+id/headerTransparentView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="56dp"-->
    <!--android:background="#00ff0000" />-->

    <RelativeLayout
        android:id="@+id/headerRL"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <View
            android:id="@+id/header_View1"
            android:layout_width="16dp"
            android:background="#99000000"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/header_View2"
            android:layout_width="16dp"
            android:background="#99000000"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/tint2View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000" />

        <com.pulseapp.android.customViews.MaxHeightLinearLayout
            android:id="@+id/maxHeightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:_max_height="256dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mediasRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />
        </com.pulseapp.android.customViews.MaxHeightLinearLayout>
    </FrameLayout>
</LinearLayout>