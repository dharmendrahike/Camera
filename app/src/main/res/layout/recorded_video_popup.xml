<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:gravity="center_vertical"
    android:visibility="gone">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recorded_popup_overlay"
        android:id="@+id/shadowLayout">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/dragger_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:id="@+id/container"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:keepScreenOn="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/topContent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:id="@+id/transparentRow"
                    android:background="@color/transparent">
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/transparentRow">
                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/popupCloseButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp" />
                    </RelativeLayout>
                </RelativeLayout>
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/UserImage"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/interactionCount"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="28sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INTERACTIONS"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout"
                android:layout_below="@+id/topContent"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventLayout"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#2d2d2d"
                        android:id="@+id/event_name"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="2px"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="#9E9E9E"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventLayout"
                    android:weightSum="1.5"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout2"
                    android:layout_marginBottom="20dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:id="@+id/followedInteractionLayout"
                        android:layout_marginTop="2sp"
                        android:gravity="center_horizontal|center_vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp"
                                android:text="Follows"
                                android:layout_gravity="center_horizontal" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/followed_interaction_count"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="0"
                                android:textSize="15sp"
                                android:textColor="#2d2d2d"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:id="@+id/likeInteractionLayout"
                        android:layout_marginTop="2sp"
                        android:gravity="center_horizontal|center_vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp"
                                android:text="Likes"
                                android:layout_gravity="center_horizontal" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/liked_interaction_count"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="0"
                                android:textSize="15sp"
                                android:textColor="#2d2d2d"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:id="@+id/restreamedInteractionLayout"
                        android:layout_marginTop="2sp"
                        android:gravity="center_horizontal|center_vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp"
                                android:text="Comments"
                                android:layout_gravity="center_horizontal" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/chat_interaction_count"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="0"
                                android:textSize="15sp"
                                android:textColor="#2d2d2d"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <!--<com.google.android.exoplayer.AspectRatioFrameLayout-->
                    <!--android:id="@+id/video_frame"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_below="@+id/linearLayout2"-->
                    <!--android:layout_height="wrap_content">-->
                    <!--<SurfaceView android:id="@+id/surface_view"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent" />-->
                <!--</com.google.android.exoplayer.AspectRatioFrameLayout>-->
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recorderText"
                    android:visibility="gone"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#181818"
                        android:text="We loved your broadcast. Keep streaming!"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/recorderText"
                    android:id="@+id/borderView"
                    android:background="#303030">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/borderView"
                    android:weightSum="100"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="45"
                        android:id="@+id/watchNowButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/watchNowIcon"
                            android:visibility="gone"
                            android:padding="2dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/video_link"
                            android:text="Processing"
                            android:layout_marginLeft="5dp"
                            android:textSize="14sp"
                            android:textColor="#222222"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#303030"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/save_video"
                        android:layout_weight="55"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/saveText"
                            android:text="SAVE TO DEVICE"
                            android:layout_marginLeft="5dp"
                            android:textSize="14sp"
                            android:textColor="#222222"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/shareContent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        android:layout_marginTop="1px"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fbshare"
            android:gravity="center_horizontal|center_vertical"
            android:focusable="true"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/fbIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/twitter_share"
            android:focusable="true"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/watsapp_share"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:id="@+id/watsapp_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/email_share"
            android:layout_weight="1"
            android:focusable="true"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:id="@+id/mailIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>