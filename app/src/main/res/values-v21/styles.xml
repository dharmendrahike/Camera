    <style name="InstaLively.Theme.ActionBar" parent="Theme.AppCompat.Light.NoActionBar" >

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/instalively_color_primary</item>

        <item name="windowActionModeOverlay">true</item>
        
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/instalively_color_primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/instalively_accent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <item name="windowActionBar">false</item>
        <item name="titleTextStyle">@style/InstaLively.ActionBar.TitleTextStyle</item>
    </style>

    <style name="InstaLively.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionBarSize">48dp</item>
        <item name="android:height">@dimen/height48</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:actionBarDivider">@color/black_overlay</item>
        <item name="android:actionBarItemBackground">@color/instalively_accent</item>
        <item name="titleTextStyle">@style/InstaLively.ActionBar.TitleTextStyle</item>
    </style>

    <!--@style/TextAppearance.AppCompat.Widget.Base.ActionBar.Title-->

    <style name="InstaLively.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/pulse_button_color</item>
        <item name="colorControlNormal">@color/pulse_unselect_color</item>
    </style>

