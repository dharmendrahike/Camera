    <style name="InstaLively.Theme.ActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/instalively_color_primary</item>

        <item name="windowActionModeOverlay">true</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/instalively_color_primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/instalively_accent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <item name="windowActionBar">false</item>
        <item name="titleTextStyle">@style/InstaLively.ActionBar.TitleTextStyle</item>
    </style>

    <style name="InstaLively.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionBarSize">48dp</item>
        <item name="android:height">@dimen/height48</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:actionBarDivider">@color/black_overlay</item>
        <item name="android:actionBarItemBackground">@color/instalively_accent</item>
        <item name="titleTextStyle">@style/InstaLively.ActionBar.TitleTextStyle</item>
    </style>

    <!--@style/TextAppearance.AppCompat.Widget.Base.ActionBar.Title-->

    <style name="InstaLively.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerAsEditText" parent="@android:style/Widget.Spinner">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="RootTheme" parent="android:Theme.Holo"></style>

    <style name="PlayerTheme" parent="@style/RootTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="DemoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="Divider_Material_wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#373737</item>
    </style>

    <style name="DividerGridItemVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#373737</item>
    </style>

    <style name="RoundedButtonCameraColor">
        <!--<item name="android:background">@drawable/green_round_button</item>-->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/pulse_button_color</item>
        <item name="colorControlNormal">@color/pulse_unselect_color</item>
    </style>

    <style name="CustomCheckBox">
        <item name="android:theme">@style/CheckBoxAppTheme</item>
    </style>

    <style name="CheckBoxAppTheme">
        <item name="colorAccent">@color/pulse_button_color</item>
        <item name="colorControlNormal">@color/pulse_unselect_color</item>
    </style>

</resources>
